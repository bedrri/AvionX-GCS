<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AvionX.App"
             xmlns:local="using:AvionX"
             xmlns:controls="using:AvionX.Views.Controls"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Resources>
        <!-- Global Value Converters -->
        <!-- NegateConverter removed - rotation now handled in code-behind -->
    </Application.Resources>

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />

        <!-- Global Font Styles - Professional Aviation UI (Roboto) -->
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="avares://AvionX/Assets/Fonts#Roboto"/>
            <Setter Property="FontWeight" Value="Regular"/>
        </Style>

        <!-- Headers - Bold and impactful -->
        <Style Selector="TextBlock.header">
            <Setter Property="FontFamily" Value="avares://AvionX/Assets/Fonts#Roboto"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Numeric displays - Medium weight for readability -->
        <Style Selector="TextBlock.numeric">
            <Setter Property="FontFamily" Value="avares://AvionX/Assets/Fonts#Roboto"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <!-- Small labels - Lighter weight -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontFamily" Value="avares://AvionX/Assets/Fonts#Roboto"/>
            <Setter Property="FontWeight" Value="Light"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <!-- Connect Button - Disconnected state (Red) -->
        <Style Selector="Button.connect-button">
            <Setter Property="Background" Value="#8B0000"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="4"/>
        </Style>

        <!-- Connect Button - Connected state (Green) -->
        <Style Selector="Button.connect-button.connected">
            <Setter Property="Background" Value="#2E7D32"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Button hover effects -->
        <Style Selector="Button.connect-button:pointerover">
            <Setter Property="Background" Value="#A52A2A"/>
        </Style>

        <Style Selector="Button.connect-button.connected:pointerover">
            <Setter Property="Background" Value="#388E3C"/>
        </Style>

        <!-- Instrument Panel Borders - Prominent separation -->
        <Style Selector="Border.instrument-panel">
            <Setter Property="BorderBrush" Value="#5a5a5e"/>
            <Setter Property="BorderThickness" Value="3"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Background" Value="#0f0f0f"/>
        </Style>
    </Application.Styles>
</Application>